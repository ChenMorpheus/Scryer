<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/grey10"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingStart="@dimen/common_padding_24dp"
        android:paddingTop="@dimen/about_vertical_padding"
        android:paddingEnd="@dimen/common_padding_24dp"
        android:paddingBottom="@dimen/about_vertical_padding">

        <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/image_appbeta" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/common_padding_12dp"
            android:src="@drawable/image_logotype" />

        <TextView
            android:id="@+id/about_text_version"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/common_padding_20dp"
            android:gravity="center"
            android:textAppearance="@style/Caption"
            android:textColor="@color/grey60" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/grey20" />

    <Button
        android:id="@+id/about_btn_support"
        style="@android:style/Widget.DeviceDefault.Button.Borderless"
        android:layout_width="match_parent"
        android:layout_height="@dimen/settings_list_item_height"
        android:paddingStart="@dimen/common_padding_24dp"
        android:paddingEnd="@dimen/common_padding_24dp"
        android:text="@string/about_list_support"
        android:textAlignment="textStart"
        android:textAppearance="@style/Subtitle1" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/grey20" />

    <Button
        android:id="@+id/about_btn_your_rights_licenses"
        style="@android:style/Widget.DeviceDefault.Button.Borderless"
        android:layout_width="match_parent"
        android:layout_height="@dimen/settings_list_item_height"
        android:paddingStart="@dimen/common_padding_24dp"
        android:paddingEnd="@dimen/common_padding_24dp"
        android:text="@string/about_list_right"
        android:textAlignment="textStart"
        android:textAppearance="@style/Subtitle1" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/grey20" />

    <Button
        android:id="@+id/about_btn_privacy_notice"
        style="@android:style/Widget.DeviceDefault.Button.Borderless"
        android:layout_width="match_parent"
        android:layout_height="@dimen/settings_list_item_height"
        android:paddingStart="@dimen/common_padding_24dp"
        android:paddingEnd="@dimen/common_padding_24dp"
        android:text="@string/about_list_privacy"
        android:textAlignment="textStart"
        android:textAppearance="@style/Subtitle1" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/grey20" />
</LinearLayout>
